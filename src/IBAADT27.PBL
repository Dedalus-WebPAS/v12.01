.        SETD0000 : Set up the Debtors Transaction Records
.        ======================================================================
.
.        Inpatient Dtran
.
SETD0000  MOVE      PINVADM,TADMNO
          MOVE      PVITRAN,TTRANSN1
.
          IF        OPTION=1
            MOVE      ANSH,TTYPEDEB
            MOVE      HCODE,TDCODE
          ELSE
            MOVE      ANSI,TTYPEDEB
            MOVE      CLMTYPE,TDCODE
          ENDIF
.
          MOVE      ZERO,TPATAMTP
          MOVE      HFTOTAL,TREBATE
.
          MOVE      CDD,TFDAY
          MOVE      CMM,TFMONTH
          MOVE      CYY,TFYEAR
          MOVE      CCC,TFCENT
.
          MOVE      ZERO,PTDTLSPT
          MOVE      ZERO,PTDTLSRB
          MOVE      ZERO,PTDTDTYP
          MOVE      SP3,TMISGRP
          MOVE      ZERO,PTDTCCU
          MOVE      "PY",TTYPE
          MOVE      PINVNO,TREF
          MOVE      BTYPEF,TPAYTYPE
          MOVE      ONE,TINVPRT
          MOVE      FIVE,TRECTYPE
          MOVE      BATCHNO,TBATCHN
          PACK      PTDTDES2,SP20,SP20
          PACK      PTDTEFFD,CCC,CYY,CMM,CDD
          REP       " 0",PTDTEFFD
.
          MOVE      SP70,PTDTBTYP
          MOVE      ZERO,PTDTEPSD
          MOVE      ZERO,PTDTGSTA
          MOVE      SP6,PTDTGSTC
          MOVE      ZERO,PTDTGSTM
          MOVE      ZERO,PTDTGSTL
          MOVE      SP70,PTDTTMNO
          MOVE      SP70,PTDTPMBS
          MOVE      SP70,PTDTPCOD
.
SETD9999  RETURN
.
