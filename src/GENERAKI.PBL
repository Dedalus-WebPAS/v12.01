.----------------------------------------------------------------------
.   Program       : GENERAKI
.   Modifications : 
.
.----------------------------------------------------------------------
.
.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       MEHAXIFD/INC
          INC       MEHAKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERAKI"
PRGNAM    INIT      "Fix mehakiaf"
VERSION   INIT      "V12.01.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"This file generate Axis Keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      MEHAXIA1,"mehaxiaf"
          OPEN      MEHAKIA1,"mehakiaf"
          OPEN      MEHAKIA2,"mehakiaf"
.
.---- loop through mehaxiaf ----
.
          PACK      KEY10,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RSMHAXI1           * read next record
.
ML1100    CALL      RKMHAXI1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",MHAXTYPE,MHAXCODE,*EF;
          ENDIF
.
          PROC      MEHAKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       MEHAXIIO/INC
          INC       MEHAKIIO/INC
          INC       MEHAKIPR
          INC       STDGENCD
.
