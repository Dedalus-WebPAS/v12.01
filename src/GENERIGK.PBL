.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       PMSIGRFD/INC
          INC       PMSGKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERIGK"
PRGNAM    INIT      "Generate Impairment Group Keywords"
VERSION   INIT      "V12.01.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"This file generates Impairment Group Keyword":
                           " records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      PMSIGRA1,"pmsigraf"
          OPEN      PMSGKIA1,"pmsgkiaf"
          OPEN      PMSGKIA2,"pmsgkiaf"
.
.---- loop through pmsigraf ----
.
          PACK      KEY3,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RSPMIGR1           * read record positon
ML1100    CALL      RKPMIGR1           * read next record
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",PMIGCODE,*EF;
          ENDIF
.
          PROC      PMSGKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       PMSIGRIO/INC
          INC       PMSGKIIO/INC
          INC       PMSIGKPR
          INC       STDGENCD
.
