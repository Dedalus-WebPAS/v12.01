.******************************************************************************
.* System    :   Patient Management System                                    *
.* Program   :   FX249291                                                     *
.* Desc      :   Copy/update all 'Comments/Notes' from viscmtaf               *
.******************************************************************************
.* Date      :   15/04/2013                                                   *
.* Author    :   Don Nguyen                                                   *
.* Function  :   This program will copy/update all 'Comments/Notes'           *
.*               (Visit Note Type - 004 and 003) from 'viscmtaf' to the new   *
.*               file ('vismdtaf' and 'vismtxaf').                            *
.* Mods      :                                                                *
.******************************************************************************
.* V10.06.03 :   24/06/2015 Jill Parkinson CAR 318524                         *
.*               Added BILL0000 to stop look of patvisaf - not necessary      *
.* V10.06.02 :   21/05/2015 J.Tan          CAR 315931                         *
.*               Mods to display Start End date/time                          *
.* V10.06.01 :   21/04/2015 J.Tan          CAR 291099                         *
.*               Mods Billing Comments to copy all visits (not Inpatient only)*
.* V10.05.02 :   13/01/2015 Jill Parkinson CAR 311114                         *
.*               Removed code to update, should only add new records          *
.* V10.05.01 :   16/07/2014  J.Tan               CAR 291099                   *
.*               Added option to copy Billing Comments                        *
.* V10.03.00 :   15/04/2013  Don Nguyen          CAR 249291                   *
.*               Created program                                              *
.******************************************************************************
.
          INC       STD001FD
.
. FILE DESCRIPTION INCLUDES
. -------------------------
          INC       VISCMTFD/INC
          INC       VISMDTFD/INC
          INC       VISMTXFD/INC
          INC       PATVISFD/INC
.
. LOCAL VARIABLE DEFINITION
. -------------------------
.
DIM2A     DIM       2
DIM2B     DIM       2
DIM2C     DIM       2
LIN1BLNK  FORM      1
NOTETYPE  DIM       3
NOTENUMB  FORM      6
RECNUM    FORM      8
.
PRGID     INIT      "FX249291"
PRGNAM    INIT      "Notes/Comments Conversion "
VERSION   INIT      "V12.01.00"
+
.**************************************************************************
.*                              ML0000                                    *
.*                      Controlling Logic (Mainline code)                 *
.**************************************************************************
.
ML0000    CALL      INIT0000               * initialisation and open files
.
ML0100    CALL      OPTN0000               * select options
          BRANCH    EXIT,ML9999            * EXIT = 1 if 0 chosen in menu
          BRANCH    COPTION,ML1000:        * proceed with clean up
                            ML1000
.
ML1000    CALL      CONTQST                * Ok to continue ?
          BRANCH    CEXIT,ML2000:          * yes
                          ML0100:          * no
                          ML0100           * cancel
.
ML2000    IF        COPTION=2
            CALL      BILL0000               * process
          ELSE
            CALL      PROC0000               * process
          ENDIF
.
ML9999    CHAIN     PGM                    * chain back to program
+
.****************************************************************************
.*                                INIT0000             Called by: ML0000    *
.*                             initialisation                               *
.*  The initialisation routine is used to display headings and open files.  *
.****************************************************************************
.
INIT0000  CALL      DISPHEAD                * display heading
.
          OPEN      VISCMTA1,"viscmtaf"
          OPEN      VISMDTA1,"vismdtaf"
          OPEN      VISMTXA1,"vismtxaf"
          OPEN      PATVISA1,"patvisaf"
.
          MOVE      ZERO,RECNUM
.
INIT9999  RETURN
+
.****************************************************************************
.*                                OPTN0000             Called by: ML0000    *
.*                        get user options or exit                          *
.*                                                                          *
.*    Returns:  EXIT    = FALSE (0)  Run clean up                           *
.*                        TRUE  (1)  Exit option selected                   *
.****************************************************************************
.
OPTN0000  DISPLAY   *P1:3,*EF,*P1:4,*V2LON,ZERO,*HOFF,". Exit":
                    *P1:5,*V2LON,ONE,*HOFF:
                          ". Coding Notes/Comments (Comment Type=004)":
                    *P1:6,*V2LON,TWO,*HOFF:
                          ". Billing Notes/Comments(Comment Type=003)"
.
OPTN0500  KEYIN     *P1:8,*EL,"Select Option : ",*DV,UNDLN1:
                    *P17:8,*V2LON,COPTION
.
          COMPARE   ZERO,COPTION            * exit selected ?
          GOTO      OPTN9500 IF EQUAL       * yes
.
          BRANCH    COPTION,OPTN1000,OPTN2000
.
          BEEP
          GOTO      OPTN0500
.
OPTN1000  MOVE      "004",NOTETYPE          * Coding Notes/Comments
          GOTO      OPTN9000
.
OPTN2000  MOVE      "003",NOTETYPE          * Billing Notes/Comments
          GOTO      OPTN9000
.
OPTN9000  MOVE      ZERO,EXIT
          GOTO      OPTN9999
.
OPTN9500  MOVE      ONE,EXIT
.
OPTN9999  RETURN
+
.**************************************************************************
.*                  CLVSMD00                          Called by: PROC0000 *
.*                                                                        *
.**************************************************************************
CLVSMD00  MOVE      SP70,VSMDVISN
          MOVE      SP70,VSMDTYPE
          MOVE      SP70,VSMDNOTE
          MOVE      SP70,VSMDDATE
          MOVE      SP70,VSMDTIME
          MOVE      SP70,VSMDUSER
          MOVE      SP70,VSMDOCCG
          MOVE      ZERO,VSMDDELT
          MOVE      SP70,VSMDDDAT
          MOVE      SP70,VSMDDTIM
          MOVE      SP70,VSMDDUSE
          MOVE      SP70,VSMDDOCC
          MOVE      SP70,VSMDSPAR
.
CLVSMD99  RETURN
.**************************************************************************
.*                               PROC0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROC0000  MOVE      ONE,NOTENUMB            * Note number
.
          CALL      IBACLOCK
          REP       " 0",CDATE
          DISPLAY   *P1:18,"Started : ",CDATE,SP1,CTIMEIS:
                    *P1:20,*EL,"Record No. :";
.
          PACK      KEY8,SP70
          CALL      RDSVISA1
PROC1000  CALL      RDKVISA1                * Check all patvisaf records
          BRANCH    OVRCD,PROC9000
.
          COMPARE   TWO,COPTION
          GOTO      PROC1020 IF EQUAL       * all visits for Billing Comments
.
          COMPARE   THREE,PVITYPE           * Inpatient visit?
          GOTO      PROC1000 IF NOT EQUAL
.
PROC1020  ADD       ONE,RECNUM              * Update record counter
          IF        (RECNUM%1000) = 0
            DISPLAY   *P15:20,*V2LON,RECNUM
          ENDIF
.
          MOVE      ZERO,LIN1BLNK           * Set line 1 blank to no
.
          PACK      KEY14,PVIBILL,NOTETYPE,SP70
          CALL      RSVSCMT1
PROC1100  CALL      RKVSCMT1                * Check for Notes/Comments
          BRANCH    OVRCD,PROC1000
.
          MATCH     DPVIBILL,VSCTVIST
          GOTO      PROC1000 IF NOT EQUAL
.
          MATCH     NOTETYPE,VSCTTYPE
          GOTO      PROC1000 IF NOT EQUAL
.
          MATCH     "  1",VSCTLINE
          IF        @EQUAL
            MATCH    SP70,VSCTDATA
            IF       @EQUAL | @EOS
              MOVE     ONE,LIN1BLNK         * Line 1 is blank so skip 
              GOTO     PROC1100
            ENDIF
          ENDIF
.
          MATCH     "  2",VSCTLINE
          IF        @EQUAL
            MATCH    SP70,VSCTDATA
            IF       @EQUAL | @EOS
              BRANCH   LIN1BLNK,PROC1100    * Line 1 & 2 are blank so skip 
            ENDIF
          ENDIF
.
.         Create/update Notes/Comments header record
.
          PACK      KEY17,VSCTVIST,VSCTTYPE,NOTENUMB,SP70 
          CALL      RDVSMDT1                * header record exists?
          IF        OVRCD=1
            CALL      CLVSMD00
.
            MOVE      VSCTVIST,VSMDVISN
            MOVE      VSCTTYPE,VSMDTYPE
            MOVE      NOTENUMB,VSMDNOTE
.
            MATCH     SP70,VSCTUKEY
            IF        !@EQUAL
              UNPACK    VSCTUKEY,VSMDDATE,DIM2A,D1,DIM2B,D1,DIM2C,VSMDUSER
              MATCH     ":",D1
              IF        !@EQUAL
                UNPACK    VSCTUKEY,VSMDDATE,DIM2A,DIM2B,DIM2C,VSMDUSER
              ENDIF
              PACK      VSMDTIME,DIM2A,COLON,DIM2B,COLON,DIM2C,SP70
            ENDIF
.
            PACK      KEY17,VSMDVISN,VSMDTYPE,VSMDNOTE,SP70
            CALL      WRVSMDT1
          ELSE
            CALL      CLVSMD00
.
            MOVE      VSCTVIST,VSMDVISN
            MOVE      VSCTTYPE,VSMDTYPE
            MOVE      NOTENUMB,VSMDNOTE
.
            MATCH     SP70,VSCTUKEY
            IF        !@EQUAL
              UNPACK    VSCTUKEY,VSMDDATE,DIM2A,D1,DIM2B,D1,DIM2C,VSMDUSER
              MATCH     ":",D1
              IF        !@EQUAL
                UNPACK    VSCTUKEY,VSMDDATE,DIM2A,DIM2B,DIM2C,VSMDUSER
              ENDIF
              PACK      VSMDTIME,DIM2A,COLON,DIM2B,COLON,DIM2C,SP70
            ENDIF
.
            PACK      KEY17,VSMDVISN,VSMDTYPE,VSMDNOTE,SP70
......      CALL      UPVSMDT1
          ENDIF
.
.         Create/update Notes/Comments Free Text record...
.
          PACK      KEY20,VSCTVIST,VSCTTYPE,NOTENUMB,VSCTLINE,SP70
          CALL      RDVSMTX1
          IF        OVRCD=1
            MOVE      VSCTVIST,VSMTVISN
            MOVE      VSCTTYPE,VSMTTYPE
            MOVE      NOTENUMB,VSMTNOTE
            MOVE      VSCTLINE,VSMTUNIQ
            MOVE      VSCTDATA,VSMTCMNT
            MOVE      SP70,VSMTSPAR
.
            PACK      KEY20,VSMTVISN,VSMTTYPE,VSMTNOTE,VSMTUNIQ,SP70
            CALL      WRVSMTX1
          ELSE
            MOVE      VSCTVIST,VSMTVISN
            MOVE      VSCTTYPE,VSMTTYPE
            MOVE      NOTENUMB,VSMTNOTE
            MOVE      VSCTLINE,VSMTUNIQ
            MOVE      VSCTDATA,VSMTCMNT
            MOVE      SP70,VSMTSPAR
.
            PACK      KEY20,VSMTVISN,VSMTTYPE,VSMTNOTE,VSMTUNIQ,SP70
....        CALL      UPVSMTX1
          ENDIF
.
          GOTO      PROC1100
.
PROC9000  CALL      IBACLOCK
          REP       " 0",CDATE
          DISPLAY   *P15:20,*V2LON,RECNUM,*HOFF:
                    *P1:22,"Update completed ",CDATE,SP1,CTIMEIS:
                    *P1:24,*EL;
          CALL      HITENTER
PROC9999  RETURN
+
.**************************************************************************
.*                               BILL0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
BILL0000  MOVE      ONE,NOTENUMB            * Note number
.
          CALL      IBACLOCK
          REP       " 0",CDATE
          DISPLAY   *P1:18,"Started : ",CDATE,SP1,CTIMEIS:
                    *P1:20,*EL,"Record No. :";
.
          MOVE      ZERO,LIN1BLNK           * Set line 1 blank to no
.
          PACK      KEY14,SP70
          CALL      RSVSCMT1
BILL1100  CALL      RKVSCMT1                * Check for Notes/Comments
          BRANCH    OVRCD,BILL9000
.
          ADD       ONE,RECNUM              * Update record counter
          IF        (RECNUM%1000) = 0
            DISPLAY   *P15:20,*V2LON,"viscmtaf ",RECNUM
          ENDIF
.
          MATCH     NOTETYPE,VSCTTYPE
          GOTO      BILL1100 IF NOT EQUAL
.
          MATCH     "  1",VSCTLINE
          IF        @EQUAL
            MATCH    SP70,VSCTDATA
            IF       @EQUAL | @EOS
              MOVE     ONE,LIN1BLNK         * Line 1 is blank so skip
              GOTO     BILL1100
            ENDIF
          ENDIF
.
          MATCH     "  2",VSCTLINE
          IF        @EQUAL
            MATCH    SP70,VSCTDATA
            IF       @EQUAL | @EOS
              BRANCH   LIN1BLNK,BILL1100    * Line 1 & 2 are blank so skip
            ENDIF
          ENDIF
.
.         Create/update Notes/Comments header record
.
          PACK      KEY17,VSCTVIST,VSCTTYPE,NOTENUMB,SP70
          CALL      RDVSMDT1                * header record exists?
          IF        OVRCD=1
            CALL      CLVSMD00
.
            MOVE      VSCTVIST,VSMDVISN
            MOVE      VSCTTYPE,VSMDTYPE
            MOVE      NOTENUMB,VSMDNOTE
.
            MATCH     SP70,VSCTUKEY
            IF        !@EQUAL
              UNPACK    VSCTUKEY,VSMDDATE,DIM2A,D1,DIM2B,D1,DIM2C,VSMDUSER
              MATCH     ":",D1
              IF        !@EQUAL
                UNPACK    VSCTUKEY,VSMDDATE,DIM2A,DIM2B,DIM2C,VSMDUSER
              ENDIF
              PACK      VSMDTIME,DIM2A,COLON,DIM2B,COLON,DIM2C,SP70
            ENDIF
.
            PACK      KEY17,VSMDVISN,VSMDTYPE,VSMDNOTE,SP70
            CALL      WRVSMDT1
          ELSE
            CALL      CLVSMD00
.
            MOVE      VSCTVIST,VSMDVISN
            MOVE      VSCTTYPE,VSMDTYPE
            MOVE      NOTENUMB,VSMDNOTE
.
            MATCH     SP70,VSCTUKEY
            IF        !@EQUAL
              UNPACK    VSCTUKEY,VSMDDATE,DIM2A,D1,DIM2B,D1,DIM2C,VSMDUSER
              MATCH     ":",D1
              IF        !@EQUAL
                UNPACK    VSCTUKEY,VSMDDATE,DIM2A,DIM2B,DIM2C,VSMDUSER
              ENDIF
              PACK      VSMDTIME,DIM2A,COLON,DIM2B,COLON,DIM2C,SP70
            ENDIF
.
            PACK      KEY17,VSMDVISN,VSMDTYPE,VSMDNOTE,SP70
......      CALL      UPVSMDT1
          ENDIF
.
.         Create/update Notes/Comments Free Text record...
.
          PACK      KEY20,VSCTVIST,VSCTTYPE,NOTENUMB,VSCTLINE,SP70
          CALL      RDVSMTX1
          IF        OVRCD=1
            MOVE      VSCTVIST,VSMTVISN
            MOVE      VSCTTYPE,VSMTTYPE
            MOVE      NOTENUMB,VSMTNOTE
            MOVE      VSCTLINE,VSMTUNIQ
            MOVE      VSCTDATA,VSMTCMNT
            MOVE      SP70,VSMTSPAR
.
            PACK      KEY20,VSMTVISN,VSMTTYPE,VSMTNOTE,VSMTUNIQ,SP70
            CALL      WRVSMTX1
          ELSE
            MOVE      VSCTVIST,VSMTVISN
            MOVE      VSCTTYPE,VSMTTYPE
            MOVE      NOTENUMB,VSMTNOTE
            MOVE      VSCTLINE,VSMTUNIQ
            MOVE      VSCTDATA,VSMTCMNT
            MOVE      SP70,VSMTSPAR
.
            PACK      KEY20,VSMTVISN,VSMTTYPE,VSMTNOTE,VSMTUNIQ,SP70
....        CALL      UPVSMTX1
          ENDIF
.
          GOTO      BILL1100
.
BILL9000  CALL      IBACLOCK
          REP       " 0",CDATE
          DISPLAY   *P15:20,*V2LON,RECNUM,*HOFF:
                    *P1:22,"Update completed ",CDATE,SP1,CTIMEIS:
                    *P1:24,*EL;
          CALL      HITENTER
BILL9999  RETURN
+

. =========================================================================
.         I/O Includes
. =========================================================================
.
          INC       STD001IO
.
          INC       VISCMTIO/INC
          INC       VISMDTIO/INC
          INC       VISMTXIO/INC
          INC       PATVISIO/INC
