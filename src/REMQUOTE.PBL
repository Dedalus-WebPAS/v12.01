.***************************************************************************
.* System    :   Remove Quotes from fields                                 *
.* Program   :   REMQUOTE                                                  *
.* Desc      :   This program will remove " from adiag1,adiag2,adadiag or  *
.*               wmdesc                                                    *
.***************************************************************************
.* Date      :   03/01/2008                                                *
.* Author    :   Jill Habasque                                             *
.***************************************************************************
.* V11.02.01 10/02/2022  Thanh T          TSK 0889899
.*           Recompiled as WATTR1FD changes
.* V10.01.01 10/03/2011 Jill Parkinson CAR 233088                   
.*           Added pmsvx1af                                         
.***************************************************************************
.
          INC       STD001FD
.
. FILE DESCRIPTION INCLUDES
. -------------------------
          INC       PATMI1FD/INC
          INC       PMSVX1FD/INC
          INC       AAEDE1FD/INC
          INC       WATTR1FD/INC
.
. LOCAL VARIABLE DEFINITION
. -------------------------
.
PRGID     INIT      "REMQUOTE"
PRGNAM    INIT      "Remove double quotes         "
VERSION   INIT      "V12.01.00"
+
.**************************************************************************
.*                              ML0000                                    *
.*                      Controlling Logic (Mainline code)                 *
.**************************************************************************
.
ML0000    CALL      INIT0000               * initialisation and open files
.
ML0100    CALL      OPTN0000               * select options
          BRANCH    EXIT,ML9999            * EXIT = 1 if 0 chosen in menu
          BRANCH    COPTION,ML1000,ML1000: * proceed with clean up
                            ML1000
.
ML1000    CALL      CONTQST                * Ok to continue ?
          BRANCH    CEXIT,ML2000:          * yes
                          ML0100:          * no
                          ML0100           * cancel
.
ML2000    CALL      PROC0000               * process
          GOTO      ML0100
.
ML9999    CHAIN     PGM                    * chain back to program
+
.****************************************************************************
.*                                INIT0000             Called by: ML0000    *
.*                             initialisation                               *
.*  The initialisation routine is used to display headings and open files.  *
.****************************************************************************
.
INIT0000  CALL      DISPHEAD                  * display heading
.
          OPEN      AAEDE1A1,"aaede1af"
          OPEN      PATMI1A1,"patmi1af"
          OPEN      PMSVX1A1,"pmsvx1af"
          OPEN      WATTR1A1,"wattr1af"
.
INIT9999  RETURN
+
.****************************************************************************
.*                                OPTN0000             Called by: ML0000    *
.*                        get user options or exit                          *
.*                                                                          *
.*    Returns:  EXIT    = FALSE (0)  Run clean up                           *
.*                        TRUE  (1)  Exit option selected                   *
.****************************************************************************
.
OPTN0000  DISPLAY   *P1:3,*EF,*P1:4,*V2LON,ZERO,*HOFF,". Exit":
                    *P1:5,*V2LON,ONE,*HOFF,". Update aaede1af":
                    *P1:6,*V2LON,TWO,*HOFF,". Update patmi1af":
                    *P1:7,*V2LON,THREE,*HOFF,". Update wattr1af"
.
OPTN0500  KEYIN     *P1:9,*EL,"Select Option : ",*DV,UNDLN1:
                    *P17:9,*V2LON,COPTION
.
          COMPARE   ZERO,COPTION                 * exit selected ?
          GOTO      OPTN9500 IF EQUAL            * yes
.
          BRANCH    COPTION,OPTN9000,OPTN9000:   * run clean-up
                            OPTN9000
.
          BEEP
          GOTO      OPTN0500
.
OPTN9000  MOVE      ZERO,EXIT
          GOTO      OPTN9999
.
OPTN9500  MOVE      ONE,EXIT
.
OPTN9999  RETURN
+
.**************************************************************************
.*                               PROC0000              Called by: ML0000  *
.*                                                                        *
.**************************************************************************
.
PROC0000  IF        COPTION=1
            CALL      UPDE1000
          ENDIF
.
          IF        COPTION=2
            CALL      UPMI1000
          ENDIF
.
          IF        COPTION=3
            CALL      UPTR1000
          ENDIF
PROC9999  RETURN
+
UPDE1000  PACK      KEY8,SP70
          CALL      RDSDETA1
UPDE1100  CALL      RDKDETA1
          BRANCH    OVRCD,UPDE1900
.
          REP       "#" ",ADADIAG
          CALL      UPDETA1
          GOTO      UPDE1100
.
UPDE1900  RETURN 
+
UPMI1000  PACK      KEY8,SP70
          CALL      RDSMISS1
UPMI1100  CALL      RDKMISS1 
          BRANCH    OVRCD,UPMI1900
.
          REP       "#" ",ADIAG1
          REP       "#" ",ADIAG2
          CALL      UPMISS1
          GOTO      UPMI1100
.
UPMI1900  RETURN
+
UPTR1000  PACK      KEY19,SP70
          CALL      RDSTREA1
UPTR1100  CALL      RDKTREA1
          BRANCH    OVRCD,UPTR1900
. 
          REP       "#" ",WMDESC
          CALL      UPTREA1
          GOTO      UPTR1100
.
UPTR1900  RETURN
+
. =========================================================================
.         I/O Includes
. =========================================================================
.
          INC       STD001IO
          INC       AAEDE1IO/INC
          INC       PATMI1IO/INC
          INC       PMSVX1IO/INC
          INC       WATTR1IO/INC
