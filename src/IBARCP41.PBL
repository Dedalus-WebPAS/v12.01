          COMPARE   ZERO,FORM4A
          GOTO      MDEL9000 IF EQUAL
          COMPARE   MMAXTRAN,FORM4A
          GOTO      MDEL1000 IF EQUAL
          GOTO      MDEL1000 IF LESS
          DISPLAY   *P1:24,*EL,*B,"Item out of range. ";
          CALL      HITENTER
          GOTO      MDEL0000
