.
          MATCH     ADATE,ENDDTE8
          GOTO      TINV1000 IF LESS
.
          MOVE      SP70,DDATE
          IF        ASTAT=3
            CALL      RDDSCH1
            BRANCH    OVRCD,TINV1000
          ENDIF
          PACK      ASATDATE,PTIPCDAT,PTIPCTIM,SP70
