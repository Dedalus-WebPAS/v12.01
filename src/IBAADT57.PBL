          CALL      RDDOCT1
          IF        OVRCD=0
            MOVE      DRTYPE,XDOCTYPE
          ELSE
            PACK      KEY10,XDOCCODE,SP70
            CALL      RDPMHCP1
            IF        OVRCD=0
              MOVE      PMHCSPC1,XDOCTYPE
            ENDIF
          ENDIF  
.
          MOVE      ATYPE,XADMTYPE
          MOVE      ACLAIM,XCLMCODE
.
          MOVE      ZERO,SNUMADMN
          MOVE      ZERO,SBEDDAYS         * no of bed days
          MOVE      ZERO,SDAYCASE
.
          MOVE      ZERO,SAMTDCAS
          MOVE      ZERO,SAMTWARD
          MOVE      ZERO,SAMTTHEA
          MOVE      ZERO,SAMTMISC
          MOVE      ZERO,SAMTLUMP
.
          MOVE      ZERO,DCASEFLG
          MATCH     ADATE,DDATE
          IF        @EQUAL
            MOVE      ONE,DCASEFLG
          ENDIF
.
          MOVE      ZERO,DCASEFLG
          MATCH     ADATE,DDATE
          IF        @EQUAL
            MOVE      ONE,DCASEFLG
          ENDIF
.
          MOVE      AADMNO,KEY8
          CALL      RDTEMP4
          COMPARE   ZERO,OVRCD
