.------------------------------------------------------------
. GPHHISDM.PBL
. ------------------------------------------------------------
. Demo Program for Histogram (Stem) Chart Display
.
          INC     STDGENDF
          INC     GPHHISDF        * Include for Required for Display
.
VERSION   INIT      "V12.01.00"
PRGID     INIT    "GPHHISDM"
PRGNAM    INIT    "Sample Program for Histogram (Stem) Chart Display "
.
          CALL    DISPHEAD
.
. Insert Values into Value Array - GPHISVAL
.
          MOVE    ZERO,GPHISCNT                  * Initialise Array Counter
          REPEAT 
            ADD     ONE,GPHISCNT                 * Increment Array Counter
            MOVE    GPHISCNT,GPHISVAL[GPHISCNT] * Move in Value
          UNTIL   (GPHISCNT=15)
.
          MOVE    "Range Head",GPHISRHD
          MOVE    "Count Head",GPHISCHD
          MOVE    "Graph Main Heading",GPHISHED
          MOVE    ZERO,GPHISUND                  * Count for Values Under Range
          MOVE    ZERO,GPHISOVR                  * Count for Values Over Range
          MOVE    "1000",GPHISMIN                * Minimum Value
          MOVE    "1000",GPHISRAN                * Increment Range
          CALL    GPHISDIS
.
          DISPLAY *P1:24;
          CALL    HITENTER
          CHAIN   PGM
.
          INC     STDGENCD
          INC     GPHHISCD        * Include for Required for Display
