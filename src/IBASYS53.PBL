          READ      TEMP1,KEY6;;
          RETURN
.
RATEMP1   RESET     KEY6
          MOVE      ZERO,OVRCD
          READ      TEMP1,KEY6;ANS
          GOTO      OVERCOND IF OVER
          RETURN
.
