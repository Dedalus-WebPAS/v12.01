.
          INC       STDGENDF
          INC       PATVADFD/INC
          INC       PMSVKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERVKI"
PRGNAM    INIT      "Fix pmsvkiaf"
VERSION   INIT      "V12.01.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"Generate transfer source keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      PATVADA1,"patvadaf"
          OPEN      PMSVKIA1,"pmsvkiaf"
          OPEN      PMSVKIA2,"pmsvkiaf"
.
.---- loop through patvadaf ----
.
          PACK      KEY5,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RSPTVAD1           * read next record
.
ML1100    CALL      RKPTVAD1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",PTVACODE,*EF;
          ENDIF
.
          PROC      PMSVKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
