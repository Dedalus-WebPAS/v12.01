.----------------------------------------------------------------------
.   Program       : GENERNKI
.   Modifications : 
.
.----------------------------------------------------------------------
.
.----------------------------------------------------------------------
.  data includes
.----------------------------------------------------------------------
.
          INC       STDGENDF
          INC       OPRNURFD/INC
          INC       OPRNKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERNKI"
PRGNAM    INIT      "Fix oprnkiaf"
VERSION   INIT      "V12.01.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"This file generate Nurse Keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      OPRNURA1,"oprnuraf"
          OPEN      OPRNKIA1,"oprnkiaf"
          OPEN      OPRNKIA2,"oprnkiaf"
.
.---- loop through sinpofaf ----
.
          PACK      KEY6,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RSOPNUR1           * read next record
.
ML1100    CALL      RKOPNUR1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",OPNRCODE,*EF;
          ENDIF
.
          PROC      OPRNKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
.----------------------------------------------------------------------
.  code includes
.----------------------------------------------------------------------
.
          INC       OPRNURIO/INC
          INC       OPRNKIIO/INC
          INC       OPRNKIPR
          INC       STDGENCD
.
