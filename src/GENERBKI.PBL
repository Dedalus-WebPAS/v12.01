.
          INC       STDGENDF
          INC       ALLMEDFD/INC
          INC       ALLMKIFD/INC
.
.----------------------------------------------------------------------
.  local variables
.----------------------------------------------------------------------
.
.
PRGID     INIT      "GENERBKI"
PRGNAM    INIT      "Fix allmkiaf"
VERSION   INIT      "V12.01.00"
.
.----------------------------------------------------------------------
.  program code
.----------------------------------------------------------------------
.
.---- initialise screen and confirm desire to execute program ----
.
ML0000    CALL      DISPHEAD
.
          DISPLAY   *P1:10,"Generate Medication Keyword records."
          CALL      CONTQST
          SUB       ONE,CEXIT
          BRANCH    CEXIT,ML9999,ML9999
.
.---- open files ----
.
          OPEN      ALLMEDA1,"allmedaf"
          OPEN      ALLMKIA1,"allmkiaf"
          OPEN      ALLMKIA2,"allmkiaf"
.
.---- loop through allmedaf ----
.
          PACK      KEY20,SP70
          MOVE      ZERO,SECTOR
.
ML1000    CALL      RSALMED1           * read next record
.
ML1100    CALL      RKALMED1
          BRANCH    OVRCD,ML9999
.
          ADD       ONE,SECTOR         * display every 100th record
          IF        SECTOR%1000=1
            DISPLAY   *P1:24,*V2LON,SECTOR," - ",ALMECODE,*EF;
          ENDIF
.
          PROC      ALLMKIUP
          GOTO      ML1100
.
.---- exit program ----
.
ML9999    CHAIN     PGM
