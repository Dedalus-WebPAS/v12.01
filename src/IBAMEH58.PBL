.
PLIN5000  PRINT     *1,XXURNO,*11,XXNAME,*49,XXLVETYP,*56,XXLSC,*64,XXSEX:
                    *68,XXAGE,*73,DSADATE,SP2,DSLVDAT,SP2,DSDDATE
          GOTO      PLIN9999
