          GOTO      RTNS1000 IF EQUAL
          MOVE      THCSCOD,XXLVETYP
.
          MATCH     RDATE,TDATE                  * left for leave on same date?
          GOTO      RTNS1000 IF EQUAL            * ignore
.
          PACK      KEY8,MHVIADMN
          CALL      RDDSCH1
          IF        OVRCD = 0
            MATCH     RDATE,DDATE               * discharged on return date?
            GOTO      RTNS1000 IF EQUAL
          ENDIF
