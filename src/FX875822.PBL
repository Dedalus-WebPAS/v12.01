+
. =========================================================================
.         UPOUT000 - Update Outpatient Visits
. =========================================================================
.
UPOUT000  CALL      HEAD80 
          PRINT     *N,"Visit Number",*20,"New MyHR Consent Value"
          MOVE      ZERO,COUNTLIN
          MOVE      SP70,SAVESITE
          MOVE      SP70,CFILEPRE
          PACK      KEY9,SP70
          CALL      RDSSITA3
UPOUT100  CALL      RDKSITA3
          BRANCH    OVRCD,UPOUT990
.
          MATCH     SP70,SAVESITE
          GOTO      UPOUT200 IF EQUAL
.
          MATCH     SAVESITE,OSTFILE
          GOTO      UPOUT100 IF EQUAL
.
UPOUT200  MOVE      OSTFILE,SAVESITE
.
          MATCH     OSTFILE,CFILEPRE
          IF        !@EQUAL
            MOVE      OSTFILE,CFILEPRE
            CALL      OPNOUT00
          ENDIF
.
          PACK      KEY36,SP70
          CALL      RDSBOKB1
UPOUT300  CALL      RDKBOKB1
          BRANCH    OVRCD,UPOUT100
.
          MATCH     DOBAOUTN,SP70
          GOTO      UPOUT300 IF EQUAL
.
          MATCH     SP70,OBOUSR1
          IF        @EQUAL
            ADD       ONE,COUNTBLK
          ENDIF
.
          MATCH     "001",OBOUSR1
          IF        !@EQUAL
            MATCH     "000",OBOUSR1
            GOTO      UPOUT300 IF NOT EQUAL
          ENDIF 
.
          ADD       ONE,COUNTUPD
          PACK      KEY8,DOBAOUTN,SP70
          CALL      RDPMVX11
          BRANCH    OVRCD,UPOUT300
.
          COMPARE   ONE,COPTION
          IF        @EQUAL
            CALL      DPLY0000
            UNPACK    OBOUSR1,D2,PMVXUDF7
            COMPARE   ZERO,COUNTLIN
            IF        @EQUAL
              PRINT     *N,"Visit Number",*20,"New MyHR Consent Value"
            ENDIF 
            PRINT     *N,DOBAOUTN,*24,PMVXUDF7
          ELSE
.
            UNPACK    OBOUSR1,D2,PMVXUDF7
            CALL      UPPMVX11
.
            CALL      DPLY0000
            COMPARE   ZERO,COUNTLIN
            IF        @EQUAL
              PRINT     *N,"Visit Number",*20,"New MyHR Consent Value"
            ENDIF 
            PRINT     *N,PURNO,*24,PMVXUDF7
.
          ENDIF
          GOTO      UPOUT300
.
UPOUT990  CALL      DEND0000
.
UPOUT999  RETURN
+
.------------------------------------------------------------
. Open Outpatient Files
.------------------------------------------------------------
.
OPNOUT00  PACK      CFNAME,CFILEPRE,FILBB1A1  * Get the name of the BOKA6 file
          OPEN      OUTBB1A1,CFNAME           * Open the file
.
OPNOUT99  RETURN

+
.------------------------------------------------------------
. Display the end of the page
.------------------------------------------------------------
.
DPLY0000  ADD       ONE,COUNTLIN
          COMPARE   TWENTY7,COUNTLIN
          IF        @EQUAL
            CALL      DEND0000
            CALL      HEAD80
          ENDIF
.
DPLY9999  RETURN
.
DEND0000 CALL      LINE0000
         PRINT     *N,"Total Records with blank value: ",COUNTBLK
         IF        COPTION=1
           PRINT     *N,"Total Records to be updated: ",COUNTUPD
         ELSE
           PRINT     *N,"Total Records updated: ",COUNTUPD
         ENDIF
         MOVE      ZERO,COUNTLIN
.
DEND9999 RETURN
.
LINE0000  PRINT     "*-----------------------------------------------"
.
LINE9999  RETURN
