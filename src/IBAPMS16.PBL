          MOVE      TFILNAME,ADMTMP
.
          CALL      KILL0000
          PACK      CMDLINE,SP30,SP30
          CLEAR     CMDLINE
          APPEND    "isbuild ",CMDLINE
          APPEND    ADMTMP,CMDLINE
          APPEND    " 23 u1-3",CMDLINE
          RESET     CMDLINE
          EXECUTE   CMDLINE,TASKID
          OPEN      ADMTMPXX,ADMTMP
          RETURN
