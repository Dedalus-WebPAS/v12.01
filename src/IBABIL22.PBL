          IF        IBCNMHOS<>1
            GOTO      GREC1250
          ENDIF
.
          MATCH     SP70,PMLTMHOS
          IF        !@EQUAL
            MATCH     PMLTMHOS,PMVXMHOS
            GOTO      GREC1200 IF NOT EQUAL
          ENDIF
