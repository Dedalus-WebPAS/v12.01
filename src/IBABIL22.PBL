GREC1300  DISPLAY   *P1:23,*EL;
          MATCH     SYSTEM,ANSO                  * Outpatient system
          GOTO      GREC1400 IF EQUAL
.
          MATCH     SYSTEM,SP1                   * All systems
          GOTO      GREC1400 IF EQUAL
          GOTO      GREC1600                     * bypass Outpatient system
