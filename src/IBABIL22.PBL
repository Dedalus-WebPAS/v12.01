.
          MATCH     TREF,PINVNO
          GOTO      OSTD8000 IF NOT EQUAL
.
          MOVE      TREBATE,FORM12P2
          IF        TRECTYPE=2 | TRECTYPE=3
            IF        TSERVS>1
              MULT      TSERVS,FORM12P2         * Quantity
            ENDIF
          ENDIF
          COMPARE   FIVE,TRECTYPE
          GOTO      OSTD5000 IF NOT EQUAL
