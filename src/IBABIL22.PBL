          CALL      RDCODE1
          IF        OVRCD=0
            MATCH     "E",TCINDC1
            GOTO      OSTD4000 IF EQUAL     * skip Deposit Excess
          ENDIF
.
OSTD5000  IF        F1=0
            ADD       TPATAMTT,PATOUTST           * the patient portion
            ADD       PTDTLSPT,PATOUTST
            ADD       PTDTGSTM,PATOUTST
            ADD       PTDTGSTL,PATOUTST
            SUB       FORM12P2,PATOUTST
          ENDIF
